{
  "manifest_version": 2,
  "name": "NeWorkHotkeys",
  "description": "hotkeys for NeWork",
  "version": "0.5",
  "browser_action": {
    "default_icon": "icon_32.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icon_128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://nework.app/workspace/*"
      ],
      "run_at": "document_end",
      "js": [
        "js/vendor.js",
        "js/content_script.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "js/vendor.js",
      "js/background.js"
    ],
    "persistent": true
  },
  "commands": {
    "toggle_mic": {
      "description": "toggle your microphone"
    }
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "web_accessible_resources": [
    "*.mp3"
  ]
}
